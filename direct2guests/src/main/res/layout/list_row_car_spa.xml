<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab"
    android:layout_width="330dp"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="77dp"
        android:layout_height="67dp"
        android:layout_centerVertical="true"
        android:src="@drawable/spa"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/item_details"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/brandonbold"
            android:textColor="#ffffff"
            android:textSize="14sp"
            tools:text="awsdfasdf" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/brandonreg"
            android:textColor="#723C92"
            android:textColorHighlight="#723C92"
            android:textColorHint="#723C92"
            android:textColorLink="#723C92"
            android:textSize="11sp"
            android:visibility="gone"
            tools:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quantity_layout"
        android:layout_width="129dp"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@id/item_details"
        android:layout_toEndOf="@id/item_details">

        <TextView
            android:id="@+id/priceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/brandonreg"
            android:text="PHP 1000.00"
            android:textAlignment="textEnd"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:visibility="visible" />
    </RelativeLayout>

    <!-- Artist Name -->

