<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/confirmCartDialog"
        android:layout_width="565dp"
        android:layout_height="462dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/confCartLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:id="@+id/confCartTxt"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:background="#ffffff"
                android:fontFamily="@font/brandonbold"
                android:gravity="center_vertical"
                android:paddingStart="30dp"
                android:text="Cart / Checkout"
                android:textAlignment="textStart"
                android:textColor="#912230"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/confCarSpaCartLists"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/confConfirmButton"
                android:layout_below="@+id/confCartTxt"
                android:background="#FFFFFF"
                android:focusable="true"
                android:listSelector="#5E000000"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/confConfirmButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:background="#edc894"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/confConfirmOrderTxt"
                    android:layout_width="143dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/confirm_button"
                    android:backgroundTint="#000000"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/brandonbold"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="CONFIRM ORDER"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/confCancelOrderTxt"
                    android:layout_width="143dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="159dp"
                    android:background="@drawable/confirm_button"
                    android:backgroundTint="#000000"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/brandonbold"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="CLOSE"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/confGrandTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="false"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/brandonbold"
                    android:gravity="center_vertical"
                    android:text="PHP 1000.00 / TOTAL"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>