<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.direct2guests.d2g_tv.Activities.OffersDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="580dp"
            android:background="@color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/HomeBtnOffer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="46dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/home_logo"
            android:visibility="gone" />

        <Button
            android:id="@+id/BackBtnOffer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/HomeBtnOffer"
            android:layout_marginStart="30dp"
            android:layout_toRightOf="@+id/HomeBtnOffer"
            android:background="@drawable/back_logo"
            android:visibility="gone" />

        <TextView
            android:id="@+id/OfferTitle"
            android:layout_width="168dp"
            android:layout_height="56dp"
            android:layout_alignTop="@+id/HomeBtnOffer"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="-8dp"
            android:layout_toRightOf="@+id/BackBtnOffer"
            android:gravity="center_vertical|center_horizontal"
            android:text="Offer Type"
            android:textColor="#fff"
            android:textSize="24sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/notif"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/OfferTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="49dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/new_message"
                android:layout_width="26dp"
                android:layout_height="25dp"
                android:layout_alignRight="@+id/chat_message"
                android:background="@drawable/badge_circle"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="center"
                android:translationZ="30dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/chat_message"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/message_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center|center_horizontal|center_vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="11dp">

                <LinearLayout
                    android:id="@+id/outerCardHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/hotelLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
