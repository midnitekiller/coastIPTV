<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.direct2guests.d2g_tv.Activities.ChannelListActivity">

    <RelativeLayout
        android:id="@+id/ListLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tvbgc"
            android:descendantFocusability="blocksDescendants"
            android:focusableInTouchMode="false"
            android:touchscreenBlocksFocus="false"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/debugtxt"
                android:layout_width="317dp"
                android:layout_height="66dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="30dp"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/brandonbold"
                android:text="Asasdasdasdasdasdasdasd"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="gone" />


            <ProgressBar
                android:id="@+id/loadingStream2"
                style="?android:attr/progressBarStyle"
                android:layout_width="80dp"
                android:layout_height="61dp"
                android:layout_alignStart="@+id/RTSPlayer2"
                android:layout_alignTop="@+id/RTSPlayer2"
                android:layout_alignEnd="@+id/RTSPlayer2"
                android:layout_alignBottom="@+id/RTSPlayer2"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="141dp"
                android:layout_marginTop="79dp"
                android:layout_marginEnd="135dp"
                android:layout_marginBottom="81dp"
                android:focusableInTouchMode="false"
                android:indeterminate="true"
                android:translationZ="10dp" />

            <VideoView
                android:id="@+id/RTSPlayer2"
                android:layout_width="434dp"
                android:layout_height="266dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="47dp"
                android:layout_marginTop="122dp"
                android:layout_marginBottom="152dp" />

            <RelativeLayout
                android:id="@+id/TitleLayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#262626"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/guestNameTxtV4"
                    android:layout_width="429dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="-176dp"
                    android:layout_marginBottom="324dp"
                    android:fontFamily="@font/brandonbold"
                    android:text="@string/indexGuestName"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/brandonbold"
                    android:text="Channel List"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:typeface="normal" />

            </RelativeLayout>


        </RelativeLayout>

        <ListView
            android:id="@+id/channelListview"
            android:layout_width="200dp"
            android:layout_height="315dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="633dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="111dp"
            android:divider="#912230"
            android:dividerHeight="1px"
            android:focusableInTouchMode="false"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:listSelector="#57912230"
            android:scrollbars="none">

            <requestFocus />
        </ListView>

        <ImageView
            android:id="@+id/arrowup"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@id/channelListview"
            android:layout_alignTop="@id/channelListview"
            android:layout_marginStart="96dp"
            android:layout_marginTop="-34dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/up"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/arrowdown"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/channelListview"
            android:layout_alignStart="@id/channelListview"
            android:layout_marginStart="96dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/down"
            android:visibility="visible" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
